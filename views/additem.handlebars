<!DOCTYPE html>
<html>
    <head>
        <title>LetsXchange Profile</title>
        <link rel="icon" type="image/x-icon" href="../assets/ico/favicon.ico">
        <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
        <link rel="icon" href="/favicon.ico" type="image/x-icon">
        <link href="../css/styles.css" rel="stylesheet" type="text/css" />
        <link href="../css/additem.css" rel="stylesheet" type="text/css" />
        
        <link rel="stylesheet" type="text/css" href="../assets/svg/fontawesome-free-5.11.2-web/css/all.css" />
    
        <script src="../js/jquery-3.4.1.js"></script>
        <!-- sets nav active element by checkling page url -->
        <script src="../js/nav-active-page.js"></script>
      
    </head>
    <body>

        <header>
            {{#if auth}}
                <script>
                    //$("header:first-of-type").load("./views/partials/header-auth.handlebars");
                </script> 
                {{> header}}
            {{else}}
            <script>
                $("header:first-of-type").load("./views/partials/header.handlebars");
            </script>     
            {{/if}}
        </header>

        <main role="main">

            {{#if msg}}
                <span class='msg'>{{msg}}</span>
            {{/if}}
            
            <div class="title">
                <h1 id="time-greet" style="display: inline-block"></h1>
                {{#if user}}
                    {{#if name}}
                        <h1 style="display: inline-block">, {{name}}!</h1>
                    {{else}}
                        <h1 style="display: inline-block">, {{user}}!</h1>
                    {{/if}}
                {{/if}}
            </div>
            
            <div id="item-form">
                <div class="add-item">
                    <span class="bigtext">Create new offer</span>
                    <form action="/contact-us" method="POST">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" placeholder="Your name..">

                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" placeholder="Your email address.." required>

                        <label for="message">Message <span style="color: rgb(105, 105, 105);">(max 1000 characters)</span></label>
                        <textarea id="message" name="message" placeholder="What can we help you with?.." style="height:200px" maxlength="750" required></textarea>

                        <input type="submit" value="Submit">
                    </form>

                </div>
            </div>

        </main>

        <footer>
            <script>
                $("footer:last-of-type").load("./views/partials/footer.handlebars");
            </script>
        </footer>
        <!-- scripts -->
        <script src="../js/time-greeting.js"></script>
    </body>
</html>